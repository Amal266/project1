  <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Retrieve the total from local storage
        const total = JSON.parse(localStorage.getItem('total')) || [];
        const sum = total.reduce((acc, item) => acc + (parseInt(item.value) || 0), 0).toFixed(2);

        // Update the basket total in the payment summary
        const basketTotalElement = document.getElementById('basketTotal');
        if (basketTotalElement) {
            basketTotalElement.innerText = `${sum} JD`;
        }

        // Function to calculate and update the order total
        function updateOrderTotal() {  
            const deliveryMethod = document.querySelector('input[name="delivery_method"]:checked');
            let deliveryFee = 0;
            if (deliveryMethod) {
                if (deliveryMethod.value === 'fast') {
                    deliveryFee = 2.50;
                } else if (deliveryMethod.value === 'normal') {
                    deliveryFee = 1.50;
                }
            }
            const tax = 0.75; 
            const orderTotal = (parseFloat(sum) + deliveryFee + tax).toFixed(2);

            // Update the delivery fee in the payment summary
            const deliveryFeeElement = document.getElementById('deliveryFee');
            if (deliveryFeeElement) {
                deliveryFeeElement.innerText = `${deliveryFee.toFixed(2)} JD`;
            }

            // Update the tax in the payment summary
            const taxElement = document.getElementById('tax');
            if (taxElement) {
                taxElement.innerText = `${tax.toFixed(2)} JD`;
            }

            // Update the order total in the payment summary
            const orderTotalElement = document.getElementById('orderTotal');
            if (orderTotalElement) {
                orderTotalElement.innerText = `${orderTotal} JD`;
            }
        }

        // Add event listeners to delivery method radio buttons
        const deliveryMethods = document.querySelectorAll('input[name="delivery_method"]');
        deliveryMethods.forEach(method => {
            method.addEventListener('change', updateOrderTotal);
        });

        // Initial calculation of the order total
        updateOrderTotal();
    });
</script>
